<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:devcloud="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhaoxukl1314.awaitheadergroup.Activity.MainActivity">

    <com.example.zhaoxukl1314.awaitheadergroup.View.AwaitHeaderTab
        android:id="@+id/await_header_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        devcloud:bar_color="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        devcloud:indicator_anim_enable="true"
        devcloud:indicator_color="#F6CE59"
        devcloud:indicator_margin_bottom="2dp"
        devcloud:indicator_margin_left="2dp"
        devcloud:indicator_margin_right="2dp"
        devcloud:indicator_margin_top="2dp"
        devcloud:indicator_bounce_enable = "false"
        devcloud:textsize="20dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" />
</LinearLayout>
